<style>
body {
  background-color: white;
  color: black;
}

.dark-mode {
  background-color: black;
  color: white;
}
</style>
<script>
function gamingMode() {
  var element = document.body;
  element.classList.toggle("gaming");
}
function darkMode() {
  var element = document.body;
  element.classList.toggle("dark-mode");
}
</script>
<center><button class="ui button" onclick="gamingMode()">Gaming Mode ON/OFF</button></center><br />
<center><button class="ui button" onclick="darkMode()">Abyss Mode ON/OFF</button></center>







